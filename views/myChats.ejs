<!DOCTYPE html>
<html>
<head>
  <title>My Chats</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
      padding: 30px;
      color: #333;
    }

    h1 {
      text-align: center;
      color: #007BFF;
      margin-bottom: 30px;
    }

    ul {
      list-style-type: none;
      padding: 0;
      max-width: 800px;
      margin: auto;
    }

    li {
      background: #ffffff;
      border: 1px solid #ddd;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.04);
    }

    strong {
      display: block;
      margin-bottom: 8px;
      font-size: 1.1rem;
    }

    form {
      margin-top: 10px;
    }

    button {
      background: linear-gradient(45deg, #007BFF, #00c6ff);
      color: #fff;
      padding: 10px 18px;
      font-size: 1rem;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    button:hover {
      background: linear-gradient(45deg, #0056b3, #00aaff);
    }

    a {
      display: block;
      text-align: center;
      margin-top: 30px;
      font-size: 1.2rem;
      color: #007BFF;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <h1>My Chats</h1>
  <ul>
    <% feedbacks.forEach(function(item) { %>
      <li>
        <strong>Franchise:</strong> <%= item.franchiseName %>
        <strong>Feedback:</strong> <%= item.info %>
        <form action="/start-chat/<%= item._id %>" method="get">
          <button type="submit">Enter Chat</button>
        </form>
      </li>
    <% }); %>
  </ul>
  <a href="/">‚Üê Back to Home</a>
</body>
</html>