<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      padding: 30px;
      color: #333;
    }

    h1 {
      text-align: center;
      margin-bottom: 25px;
      color: #007BFF;
    }

    form {
      text-align: center;
      margin-bottom: 30px;
    }

    input[type="text"],
    input[type="password"] {
      padding: 12px;
      margin: 10px;
      width: 250px;
      font-size: 1rem;
      border-radius: 6px;
      border: 1px solid #ccc;
    }

    button {
      background: linear-gradient(45deg, #007BFF, #00c6ff);
      color: #fff;
      padding: 10px 20px;
      font-size: 1rem;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    button:hover {
      background: linear-gradient(45deg, #0056b3, #00aaff);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin: 25px 0;
      background: #fff;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

    th, td {
      padding: 14px 16px;
      text-align: left;
      border-bottom: 1px solid #eee;
    }

    th {
      background-color: #e9f5ff;
      color: #333;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    a {
      color: #007BFF;
      text-decoration: none;
      font-weight: bold;
    }

    a:hover {
      text-decoration: underline;
    }

    ul {
      list-style-type: none;
      padding: 0;
      margin-top: 20px;
    }

    ul li {
      margin-bottom: 10px;
      font-size: 1.1rem;
    }
  </style>
</head>
<body>

<% if (!isAdmin) { %>
  <h1>Admin Login</h1>
  <form action="/admin" method="post">
    <input type="text" name="username" placeholder="Admin username" required><br>
    <input type="password" name="password" placeholder="Password" required><br>
    <button type="submit">Login</button>
  </form>

<% } else { %>

  <h1>Franchise Feedbacks</h1>
  <table>
    <tr>
      <th>Franchise</th>
      <th>Feedback</th>
      <th>Rating</th>
      <th>Contract</th>
      <th>Actions</th>
    </tr>
    <% users.forEach(function(user) { %>
      <tr>
        <td><%= user.franchiseName %></td>
        <td><%= user.info %></td>
        <td><%= user.rating %></td>
        <td>
          <% if (user.contractFileName) { %>
            <a href="/uploads/<%= user.contractFileName %>" target="_blank">View Contract</a>
          <% } else { %> N/A <% } %>
        </td>
        <td>
          <form action="/delete/<%= user._id %>" method="post" style="display:inline;">
            <button type="submit">Delete Feedback</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>

  <h1>All Chat Messages</h1>
  <table>
    <tr>
      <th>Room</th>
      <th>Sender</th>
      <th>Message</th>
      <th>Timestamp</th>
      <th>Actions</th>
    </tr>
    <% messages.forEach(function(msg) { %>
      <tr>
        <td><%= msg.room %></td>
        <td><%= msg.sender %></td>
        <td><%= msg.text %></td>
        <td><%= msg.timestamp.toLocaleString() %></td>
        <td>
          <form action="/delete-message/<%= msg._id %>" method="post" style="display:inline;">
            <button type="submit">Delete Message</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>

  <h1>Franchisor Responses</h1>
  <table>
    <tr>
      <th>Franchise</th>
      <th>Franchisee Feedback</th>
      <th>Franchisor Response</th>
      <th>Responder</th>
      <th>Actions</th>
    </tr>
    <% responses.forEach(function(r) { %>
      <tr>
        <% if (r.feedbackId) { %>
          <td><%= r.feedbackId.franchiseName %></td>
          <td><%= r.feedbackId.info %></td>
        <% } else { %>
          <td colspan="2">Original feedback deleted</td>
        <% } %>
        <td><%= r.response %></td>
        <td><%= r.responder %></td>
        <td>
          <form action="/delete-response/<%= r._id %>" method="post" style="display:inline;">
            <button type="submit">Delete Response</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>

  <h1>üìß Collected Emails</h1>
  <table>
    <tr>
      <th>Email</th>
      <th>Date</th>
      <th>Action</th>
    </tr>
    <% emailUsers.forEach(function(user) { %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.timestamp.toLocaleString() %></td>
        <td>
          <form action="/delete-email/<%= user._id %>" method="post" style="display:inline;" onsubmit="return confirm('Delete this email?');">
            <button type="submit">Delete Email</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>

  <h1>Anonymous Role Usage Statistics</h1>
  <ul>
    <li>Franchisee: <%= sectionCounts['franchisee'] || 0 %> visits</li>
    <li>Future Franchisee: <%= sectionCounts['future-franchisee'] || 0 %> visits</li>
    <li>Franchisor: <%= sectionCounts['franchisor'] || 0 %> visits</li>
  </ul>

  <a href="/">‚Üê Back to Home</a>

<% } %>
</body>
</html>